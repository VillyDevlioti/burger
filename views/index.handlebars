<div class="container">
  <div class="row justify-content-center">
      <div class="jumbotron jumbotron-fluid justify-content-center">
      <h1 class="display-4">Eat Da Burger</h1>
      <h2><img src="../assets/img/burgerImage.png" alt="burger image" class="image-class"></h2>
    </div>
  </div>
</div>



<ol>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}} 
    {{/unless}}
  {{/each}}
</ol>

<h2>Burgers Devoured</h2>

<ol>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}} 
    {{/if}}
  {{/each}}
</ol>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add a Burger</button>
</form>
